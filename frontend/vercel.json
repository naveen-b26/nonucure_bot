{
  "version": 2,
  "builds": [
    {
      "src": "App.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }

  ],
  "routes": [
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/api/(.*)",
      "dest": "http://your-backend-url.vercel.app/api/$1"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "http://your-backend-url.vercel.app"
  }
}
